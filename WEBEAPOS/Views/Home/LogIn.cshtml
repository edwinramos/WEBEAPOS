
@{
    ViewBag.Title = "LogIn";
}
@model WEBEAPOS.DataAccess.DataModels.TBL_USERS

@Styles.Render("~/Content/loginStyle.css")
@Styles.Render("~/Content/font-awesome-4.7.0/css/font-awesome.min.css")

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
<div class="login-form">
    <h1>eapos</h1>
    <div class="form-group ">
        @Html.TextBoxFor(o => o.UserName, new { @class = "form-control", placeholder = "UserName" })        
        <i class="fa fa-user"></i>
    </div>
    <div class="form-group log-status">
        @Html.TextBoxFor(o => o.Password, new { @class = "form-control", placeholder = "Password" })
        <i class="fa fa-lock"></i>
    </div>
    <span class="alert">Invalid Credentials</span>
    <a class="link" href="#">Lost your password?</a>
    <button type="submit" class="log-btn">Log in</button>
</div>
}
